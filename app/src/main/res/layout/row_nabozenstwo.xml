
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F0FFFFFF"
    android:padding="10dp">


    <TextView
        android:id="@+id/ib_row_title"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Adoracja NajÅ›w. Sakramentu - St. Bonifatius"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/ib_row_godzina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_row_title"
        android:layout_marginTop="5dp"
        android:text="czwartek, 13 maj, 12:45"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/ib_row_adres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ib_row_godzina"
        android:layout_marginTop="5dp"
        android:text="Anemonenweg 22, 33106 Paderborn"
        android:textColor="@android:color/black"
        android:autoLink="web"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ib_row_icon_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:src="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/ib_row_icon_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_mapmode" />


    </LinearLayout>



</RelativeLayout>
